// Auto prefix mixins.
height_calc(args...)
	height -webkit-calc(args)
	height -moz-calc(args)
	height calc(args)

width_calc(args...)
	width -webkit-calc(args)
	width -moz-calc(args)
	width calc(args)

// Clearfix from bootstrap.
clearfix()
	&:before, &:after
		content: " ";
		display: table;
	&:after
		clear: both;

animation(args...)
	-webkit-animation args
	-moz-animation args
	-o-animation args
	animation 

$flash_begin = #fcbec2
$flash_end = red

@keyframes f_row_before
	0%
		border-top-color $flash_begin
	100%
		border-top-color $flash_end
@keyframes f_row_after
	0%
		border-bottom-color $flash_begin
	100%
		border-bottom-color $flash_end
@keyframes f_col_before
	0%
		border-left-color $flash_begin
	100%
		border-left-color $flash_end
@keyframes f_col_after
	0%
		border-right-color $flash_begin
	100%
		border-right-color $flash_end

@keyframes f_selected
	0%
		box-shadow 0 0 12px #555
	100%
		box-shadow 0 0 2px #555

@keyframes f_root_selected
	0%
		box-shadow inset 0 0 12px #555
	100%
		box-shadow inset 0 0 2px #555

insertion_guide(type = '')
	if type == 'row'
		&.before
			animation f_row_before 0.5s linear 0s infinite alternate
		&.after
			animation f_row_after 0.5s linear 0s infinite alternate
	else
		&.before
			animation f_col_before 0.5s linear 0s infinite alternate
		&.after
			animation f_col_after 0.5s linear 0s infinite alternate

@keyframes add_container
	0%
		min-height 100px
	100%
		min-height 200px

.add_animate
	animation add_container 0.3s ease 0s 1

container_selected(type = '')
	if type == 'root'
		&.selected
			animation f_root_selected 0.5s linear 0s infinite alternate
	else
		&.selected
			animation f_selected 0.5s linear 0s infinite alternate
