/*
	The main style of Peditor.
 */

@import "prefix"

// ************* Dev Kit *************

.grey-box
	background #aaa

// ************** Theme **************

// Normalization

html, body, #main
	height 100%

// Normalization End


// Topbar

$topbar_height = 36px
#topbar
	height $topbar_height
	border-bottom 1px solid #333


// Topbar End


// Workspace

$workpanel_width = 300px

#workspace
	height_calc 100% \- $topbar_height
	border 1px solid #333

#workbench, #workpanel
	float left
	height 100%

#workbench
	width 100%
	margin-right - $workpanel_width
	padding-right $workpanel_width

	$ruler_height = 5px

	#outline
		width 100%
		height 100%
		position relative
		overflow auto

		.r, div[class|="c"]
			margin 15px
			min-height 100px
			background: #fff

		&.hover, .r.hover
			background: #fff2f8

		div[class|="c"].hover
			background: #ecf0ff

		.r
			border 2px solid #6D63FF

		// Clearfix
		.r:before, .r:after
			content " "
			display table
		.r:after
			clear both

		
		div[class|="c"]
			float left
			position relative
			border 2px solid #00BEFF

		for i in (1 .. 12)
			.c-{i}
				width_calc (100 / 12 * i)% \- 30px

#workpanel
	padding 0 10px
	width $workpanel_width
	overflow auto
	border-left 1px solid #333

// Workspace End
