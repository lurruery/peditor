/*
	The main style of Peditor.
 */

// ************* Dev Kit *************

.grey-box
	background-color: #aaa

// ************** Theme **************

// Normalization

iframe
	display: block
	border:none

div
	box-sizing: border-box    // * prefix required

// Normalization End


// Topbar

topbar_height = 36px

.topbar
	height: topbar_height
	border-bottom: 1px solid #8d83ed

// Topbar End


// Workspace

workpanel_width = 240px

.workbench, .workpanel
	position: fixed
	height: 100%

.workbench
	width: 100%
	padding-right: workpanel_width

	iframe
		width: 100%
		height: 100%

.workpanel
	right: 0
	top: 0
	margin-top: topbar_height
	padding: 0 10px
	width: workpanel_width
	overflow: auto
	border-left: 1px solid #82ed80

// Workspace End