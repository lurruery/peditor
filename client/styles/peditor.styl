// ************* Dev Kit *************

.grey-box
	background-color: #aaa

// ************** Theme **************

// Normalization

iframe
	display: block
	border:none

// Normalization End


// Topbar

topbar_height = 36px

.topbar
	height: topbar_height
	background-color: #ddd

// Topbar End


// Workspace

workpanel_width = 240px

.workbench, .workpanel
	position: fixed
	height: 100%

.workbench
	width: 100%
	padding-right: workpanel_width

	iframe
		width: 100%
		height: 100%

.workpanel
	right: 0
	top: 0
	margin-top: topbar_height
	width: workpanel_width
	overflow: auto
	background-color: #D9DFEE

// Workspace End