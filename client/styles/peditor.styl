/*
	The main style of Peditor.
 */

@import "peditor.mixins"

// ************** Theme **************

// Normalization

html, body, #peditor
	height 100%

hr
	border-top 1px solid #ADADAD
	border-bottom 1px solid #fff

.btn
	border-radius 2px

// Normalization End

#peditor
	background url('/img/bg.jpg')
	background-size 100% 100%

$button_highlight = #1fa1e6

// Navbar

$navbar_height = 40px
#navbar
	height $navbar_height
	line-height $navbar_height

	.button
		float left
		padding 0 15px
		cursor pointer
		&:hover
			background #fff
			color $button_highlight
		&[disabled]
			background none
			color #aaa
			cursor not-allowed

	.view_mode
		float right
		line-height normal

		label
			height 40px
			border none
			padding-top 10px
			border-radius 0

// Navbar End


// Workspace

$workpanel_width = 300px

#workspace
	height_calc 100% \- $navbar_height
	border 1px solid #333

#workbench.outline
	float left
	width 100%
	height 100%
	margin-right - $workpanel_width
	padding-right $workpanel_width

	$container_margin = 15px
	#outline
		width 100%
		height 100%
		overflow auto

		.root
			width 100%
			height 100%
			margin auto
			padding 0 $container_margin $container_margin 0
			overflow-y auto
			background #fff
			container_selected('root')

		.r, .c
			margin $container_margin 0 0 $container_margin
			padding 0 $container_margin $container_margin 0
			min-height 200px
			background: #fff

		.hover
			border-color #ff7f00 !important

		.root.hover, .r.hover
			background-color: #fff2f8

		.r
			border 2px solid #f986fb
			clearfix()
			insertion_guide('row')
			container_selected()

		.c
			float left
			border 2px solid #00BEFF
			insertion_guide()

			&.hover
				background-color: #ecf0ff

		for i in (1 .. 12)
			{s('[w="%s"]', i)}
				width_calc (100 / 12 * i)% \- $container_margin

		.widget
			margin $container_margin 0 0 $container_margin
			border 2px solid #777
			insertion_guide('row')

			&.hover
				background-color #eee

		.r, .c, .widget
			container_selected()

#workbench.preview
	height 100%

	#outline
		background-color #fff
		width 100%
		height 100%
		overflow auto

		$container_margin = 15px
		.root
			width 100%
			height 100%
			margin auto
			overflow-y auto

		.c
			margin $container_margin 0 0 $container_margin
			padding 0 $container_margin $container_margin 0

		.r
			clearfix()

		.c
			float left
		.widget
			width 100%

		for i in (1 .. 12)
			{s('[w="%s"]', i)}
				width_calc (100 / 12 * i)% \- $container_margin

#workpanel.outline
	float left
	width $workpanel_width
	height 100%
	padding 0 10px
	overflow auto
	border-left 1px solid #333

	.group
		margin 10px 0
		padding 5px
		border 1px solid #ccc
		border-radius 3px

	[PDT-bind]
		display none

	.column-width
		width 100px
		display inline-block;

	.btn_drag
		box-shadow 0 0 3px #aaa
		background #f6f6f6
		cursor pointer

		&:hover
			background #eee

	.containers .btn_drag
		padding 10px

	.input-group
		margin 10px 0

#workpanel.preview
	display none

// Workspace End


#cur_decoration
	position absolute
	margin 15px
	left: -10000px
	top: 0
