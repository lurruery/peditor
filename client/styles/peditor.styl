/*
	The main style of Peditor.
 */

// ************* Dev Kit *************

.grey-box
	background #aaa

// ************** Theme **************

// Normalization

html, body, #main
	height 100%

// Normalization End


// Topbar

$topbar_height = 36px
#topbar
	height $topbar_height
	border-bottom 1px solid #333

// Topbar End


// Workspace

$workpanel_width = 300px
$workspace_height = calc(100% \- $topbar_height)    // 'calc' not supported: Safari

#workspace
	height $workspace_height
	border 1px solid #333

#workbench, #workpanel
	float left
	height 100%

#workbench
	width 100%
	margin-right - $workpanel_width
	padding-right $workpanel_width

	$ruler_height = 5px

	#outline
		width 100%
		height 100%
		overflow auto

		.r, div[class|="c"]
			margin 15px
			min-height 100px
			background: #fff

		.r.hover
			background: #ffddec

		div[class|="c"].hover
			background: #e4eaff

		// Clearfix
		.r:before, .r:after
			content " "
			display table
		.r:after
			clear both
		.r
			border 2px solid #6D63FF

		
		div[class|="c"]
			float left
			position relative
			border 2px solid #00BEFF

		for i in (1 .. 12)
			.c-{i}
				width: calc((100 / 12 * i) % \- 30px )

	#outline.hover
		background #ffddec

#workpanel
	padding 0 10px
	width $workpanel_width
	overflow auto
	border-left 1px solid #333

// Workspace End

#cur_decoration
	position absolute
	margin 15px
