/*
	The main style of Peditor.
 */

// ************* Dev Kit *************

.grey-box
	background-color #aaa

// ************** Theme **************

// Normalization

iframe
	display block
	border none

div
	box-sizing border-box    // * prefix required

html, body, .main
	height 100%

// Normalization End


// Topbar

topbar_height = 36px
.topbar
	height topbar_height
	border-bottom 1px solid #8d83ed

// Topbar End


// Workspace

workpanel_width = 300px

.workspace
	height: calc(100% \- topbar_height)    // 'calc' not supported: Safari

.workbench, .workpanel
	float left
	height 100%

.workbench
	width 100%
	margin-right - workpanel_width
	padding-right workpanel_width

	iframe
		width 100%
		height 100%

.workpanel
	padding 0 10px
	width workpanel_width
	overflow auto
	border-left 1px solid #82ed80

// Workspace End