// Normalization

div
	box-sizing: border-box    // * prefix required

// Normalization End


// Main

.main
	.grid
		width: 100%
		margin: auto

	.grid-guide
		position: fixed
		z-index: 10000
		top: 0
		left: 0
		width: 100%
		height: 100%

		.col
			float: left
			height: 100%
			border-right: 1px dashed #000
			background: #D9DFEE
			opacity: .3

		.col:hover
			opacity: .1
